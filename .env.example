# file: .env.example
# description: Environment variables template for Stratos Markets UI
# reference: lib/api-client.ts, next.config.mjs

# ============================================
# API Configuration
# ============================================

# Stratos Markets API Base URL
# Production: https://stratos-markets-api.vercel.app/v1
# Development: http://localhost:3000/v1 (if running local API)
NEXT_PUBLIC_API_URL=https://stratos-markets-api.vercel.app/v1

# ============================================
# External Services (Server-side only)
# ============================================

# Alchemy API Key (for blockchain data)
# Get your key at: https://www.alchemy.com/
ALCHEMY_API_KEY=

# Infura API Key (alternative blockchain provider)
# Get your key at: https://infura.io/
INFURA_API_KEY=

# Dune Analytics API Key (for portfolio tracking)
# Get your key at: https://dune.com/settings/api
DUNE_API_KEY=

# ============================================
# Authentication (if implementing auth)
# ============================================

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=

# NextAuth URL (your application URL)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# x402 Payment Configuration
# ============================================

# x402 Network (from API response)
X402_NETWORK=base-sepolia

# x402 Facilitator URL
X402_FACILITATOR=https://x402.org/facilitator

# x402 Payment Address
X402_PAY_TO=0x90a7130B48764D9613666A14D00eA0b824C8b390

# ============================================
# Analytics & Monitoring
# ============================================

# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================
# Development
# ============================================

# Enable debug logging
# DEBUG=true

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1
# DO_NOT_TRACK=1
